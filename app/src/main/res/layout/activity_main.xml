<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    tools:context=".start.MainMenu">

    <TextView
        android:id="@+id/gameName"
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/inriaserifregular"
        android:gravity="center_horizontal|top"
        android:text="@string/tableOfContents"
        android:textAppearance="@style/gameName"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.153"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/makeGame"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="20dp"
        android:onClick="onClickButtonMakeGame"
        android:text="@string/createGame"
        android:textAppearance="@style/textStyle"
        app:layout_constraintEnd_toEndOf="@+id/gameName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/gameName"
        app:layout_constraintTop_toBottomOf="@+id/gameName" />

    <Button
        android:id="@+id/buttonRules"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:onClick="onClickButtonRules"
        android:text="@string/rules"
        android:textAppearance="@style/textStyle"
        app:layout_constraintEnd_toEndOf="@+id/makeGame"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/makeGame"
        app:layout_constraintTop_toBottomOf="@+id/makeGame" />

    <Button
        android:id="@+id/buttonSettings"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:onClick="onClickButtonSettings"
        android:text="@string/settings"
        app:layout_constraintEnd_toEndOf="@+id/buttonRules"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/buttonRules"
        app:layout_constraintTop_toBottomOf="@+id/buttonRules" />


</androidx.constraintlayout.widget.ConstraintLayout>