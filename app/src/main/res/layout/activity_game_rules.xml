<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    tools:context=".multiplayerActivities.MultiplayerMenu">

    <ImageView
        android:id="@+id/imageViewTitle"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="70dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/title" />

    <View
        android:id="@+id/viewHorizontalLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        android:background="@color/buttonColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTitle" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/rules"
        android:textAlignment="center"
        android:textAppearance="@style/textStyle"
        android:textColor="@color/buttonColor"
        app:layout_constraintEnd_toEndOf="@+id/viewHorizontalLine"
        app:layout_constraintStart_toStartOf="@+id/viewHorizontalLine"
        app:layout_constraintTop_toBottomOf="@+id/viewHorizontalLine" />

    <Button
        android:id="@+id/closeRules"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="32dp"
        android:onClick="onClickCloseRules"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/viewHorizontalLine"
        app:layout_constraintStart_toStartOf="@+id/viewHorizontalLine" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="294dp"
        android:layout_height="463dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/closeRules"
        app:layout_constraintEnd_toEndOf="@+id/viewHorizontalLine"
        app:layout_constraintStart_toStartOf="@+id/viewHorizontalLine"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:id="@+id/textView_rules"

            style="@style/textStyle"
            android:layout_width="300dp"
            android:layout_height="450dp"
            android:background="@color/buttonColor"
            android:paddingStart="10dp"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="none"
            android:text="@string/rulesText"
            android:textAlignment="viewStart"
            android:textSize="22sp" />

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>