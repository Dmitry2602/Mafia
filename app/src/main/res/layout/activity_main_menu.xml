<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    android:backgroundTint="#232323"
    tools:context=".commonActivities.MainMenu">

    <Button
        android:id="@+id/buttonMultiplayerGame"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:onClick="onClickButtonMultiplayerGame"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/multiplayerGame"
        android:minWidth="310dp"
        android:maxWidth="320dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonLocalGame"
        app:layout_constraintStart_toStartOf="@+id/buttonLocalGame"
        app:layout_constraintTop_toBottomOf="@+id/buttonLocalGame" />

    <Button
        android:id="@+id/buttonLocalGame"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="22dp"
        android:onClick="onClickButtonLocalGame"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/localGame"
        android:minWidth="310dp"
        android:maxWidth="320dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewTitle"
        app:layout_constraintStart_toStartOf="@+id/imageViewTitle"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTitle" />

    <Button
        android:id="@+id/buttonRules"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:onClick="onClickButtonRules"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/rules"
        android:minWidth="310dp"
        android:maxWidth="320dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonMultiplayerGame"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/buttonMultiplayerGame"
        app:layout_constraintTop_toBottomOf="@+id/buttonMultiplayerGame" />

    <Button
        android:id="@+id/buttonSettings"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:onClick="onClickButtonSettings"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/settings"
        android:minWidth="310dp"
        android:maxWidth="320dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonRules"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/buttonRules"
        app:layout_constraintTop_toBottomOf="@+id/buttonRules" />

    <ImageView
        android:id="@+id/imageViewTitle"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="50dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/title" />


</androidx.constraintlayout.widget.ConstraintLayout>