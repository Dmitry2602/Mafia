<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextPlayer"

        android:hint="Enter player's name"
        android:inputType="textPersonName"
        android:singleLine="true"

        android:focusableInTouchMode="true"


        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginEnd="60dp"
    />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/imageButtonDeletePlayer"

        android:src="@drawable/delete_player"
        android:background="@drawable/circle"

        android:layout_height="40dp"
        android:layout_width="40dp"


        app:layout_constraintStart_toEndOf="@id/editTextPlayer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/editTextPlayer"
        app:layout_constraintBottom_toBottomOf="@id/editTextPlayer"
    />


</androidx.constraintlayout.widget.ConstraintLayout>