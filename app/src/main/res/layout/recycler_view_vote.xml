<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/imageViewVotes"

        android:textColor="@color/cream_gray"
        android:fontFamily="@font/bookmanoldstyle"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/chosen_player_counter"

        android:layout_width="50dp"
        android:layout_height="50dp"

        app:layout_constraintTop_toTopOf="@id/buttonVote"
        app:layout_constraintStart_toStartOf="@id/buttonVote"
        app:layout_constraintEnd_toEndOf="@id/buttonVote"
        app:layout_constraintHorizontal_bias="0.95"

        android:layout_marginTop="-13dp"
        android:elevation="3dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonVote"
        tools:ignore="VisualLintButtonSize"

        style="@style/button"
        android:contentDescription="@string/imageDescriptionPlayerToVote"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="28dp" />

</androidx.constraintlayout.widget.ConstraintLayout>